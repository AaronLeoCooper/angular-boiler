/**
 * Posts list
 */

.post-listing
  position relative
  display block

  a
    position relative
    display block
    text-decoration none



/**
 * Post icons
 */
.post-new-badge
  position absolute
  right 100%
  top 0
  font-size 14px
  background #46DD99
  border-radius 5px
  padding 2px 5px
  box-shadow 0 1px 2px 0 rgba(0, 0, 0, .4)
  transform rotate(-5deg)
  color #fff
